{
    "name": "gears-php/framework",
    "type": "library",
    "description": "The Gears PHP Framework",
    "keywords": ["framework", "mvc"],
    "version": "0.1.0",
    "authors": [
        {
            "name": "Denis Krasilnikov",
            "email": "denis.krasilnikov@gears.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "symfony/http-foundation": "^6.0",
        "mustangostang/spyc": "0.5.*@dev"
    },
    "replace": {
        "gears-php/storage": "self.version",
        "gears-php/db": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Gears\\Framework\\": "src/",
            "Gears\\Storage\\": "component/storage/src/",
            "Gears\\Db\\": "component/db/src/"
        }
    }
}
